            </line>
            <line cols="1">
                <item type="Textbox" id="txt_filter" name="Lọc theo tên danh mục" label="Lọc theo tên loại danh mục" size="30"  />
            </line>
        </filter>
        <list>
            <!-- 3 item nay la bat buoc -->
            <item type="primarykey" id="PK_DOC" />
            <!--<item type="checkbox" id="PK_DOC" size="3%"/>-->

            <!-- ********************************************************* -->
            			
			<item type="text" id="xml/doc_ngay_van_ban" name="Ngày tháng của văn bản" size="10%"/>
			<item type="text" id="xml/doc_so_ky_hieu" name="Số và ký hiệu" size="10%"/>
			<item type="text" id="xml/doc_trich_yeu" name="Tên loại và Trích yếu" size="17%"/>
			<item type="text" id="xml/doc_nguoi_ky" name="Người ký" size="10%"/>
			<item type="text" id="xml/doc_noi_nhan" name="Nơi nhận VB" size="10%"/>
			<item type="text" id="xml/doc_noi_luu" name="Đơn vị/người lưu" size="10%"/>
			<!--<item type="text" id="xml/doc_so_luong" name="SL" size="5%"/>-->
			<item type="text" id="DOC_TINH_TRANG_XU_LY" name="Tình trạng xử lý" size="20%"/>
			<item type="action" id="PK_DOC" name="#" size="13%" action="delete, submit, approve"/>
        </list>
    </display_all>
    <display_single>
        <line label="Thông tin cá nhân" cols="2">
            <item type="TextboxName" id="txtName" name="Tên người đăng ký" allownull="no" validate="text" label="Tên tôi là:" defaul_value="" size="30" css="" Even="ConverUpperCase('txtName',this.value)" view="true"/>
            <item type="DropDownList" id="ddlSex" name="Giới tính" allownull="no" validate="ddli" label="Giới tính " defaul_value="0" src_file="../Public/xml_gioi_tinh.xml" view="true"/>
        </line>
		<xmldata>
